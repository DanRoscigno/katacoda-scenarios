docker run \
--name=filebeat \
--user=root \
--env="PATH=/usr/share/filebeat:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin" \
--volume="/var/lib/docker/containers:/var/lib/docker/containers:rw" \
--volume="/Users/droscign/Projects/src/elastic/examples/Miscellaneous/docker/full_stack_example/filebeat.yml:/usr/share/filebeat/filebeat.yml:rw" \
--volume="/var/run/docker.sock:/var/run/docker.sock:rw" \
--volume="/var/run/docker.sock" \
--volume="/usr/share/filebeat/filebeat.yml" \
--volume="/var/lib/docker/containers" \
--detach=true docker.elastic.co/beats/filebeat:6.4.0 filebeat -e -strict.perms=false


docker run \
--name=filebeat \
--user=root \
--volume="/var/lib/docker/containers:/var/lib/docker/containers:rw" \
--volume="/root/filebeat.yml:/usr/share/filebeat/filebeat.yml:rw" \
--volume="/var/run/docker.sock:/var/run/docker.sock:rw" \
--detach=true docker.elastic.co/beats/filebeat:6.4.0 filebeat -e -strict.perms=false


docker run --label co.elastic.logs/module=nginx --label co.elastic.logs/fileset.stdout=access --label co.elastic.logs/fileset.stderr=error -d -p 81:80 nginx

